{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2021",
    "lib": ["es2021"],
    "outDir": "dist/server",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "strictFunctionTypes": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "types": ["@types/node", "@citizenfx/server"]
  },
  "include": ["./**/*"]
}